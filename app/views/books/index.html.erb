<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
       
       <i class="fas fa-user-cog" aria-hidden="true"></i>
      </div>
      <h2>New book</h2>
       <%= form_with model: @book do |f| %>
      <h4>Title</h4>
       <%= f.text_field :title %>
      <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
       <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <tr>
        <% @books.each do |book| %>

        <td>
          <%= image_tag book.user.get_profile_image(80,80) %>
        </td>
        <td>
          <%= book.title %>
        </td>
        <td><%= book.body %></td>
        <% end %>
       </tr>
      </tbody> 
     </table>
    </div>
  </div>
</div>
